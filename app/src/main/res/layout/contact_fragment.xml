<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".contact">

    <TextView
        android:id="@+id/Rezer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:textSize="30sp"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"
        android:text="Rezervasyon yapmak için: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rezer"
        android:textSize="30sp"
        android:layout_marginTop="15sp"
        android:textColor="#322F2F"
        android:text="05xx xxx xx xx "
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/konum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/num"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:autoLink="map"
        android:text=" Gürsu, 156/h, Atatürk Blv., 07070 Konyaaltı/Antalya "
        android:gravity="center"
        android:textStyle="bold"/>

    <fragment
        android:id="@+id/map"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/konum"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity"/>
    </RelativeLayout>
